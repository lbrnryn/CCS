<h2 class="mb-5">Dashboard - Admin</h2>
<div class="mt-5 row gy-5">

    <div class="col-sm-6">
        <h4>Create Event</h4>
        <form action="/event" method="post" class="d-grid gap-3" id="eventForm">
            <div>
                <label for="title">Title</label>
                <input type="text" class="form-control form-control-sm border-0" id="title" name="title" required>
            </div>
            <div>
                <label for="description">Description</label>
                <textarea class="form-control form-control-sm border-0" id="description" cols="30" rows="5" name="description" required></textarea>
            </div>
            <div class="row">
                <div class="col">
                    <label for="date">Date</label>
                    <input type="date" class="form-control form-control-sm border-0" name="date" id="date">
                </div>
                <div class="col">
                    <label for="time">Time</label>
                    <input type="time" class="form-control form-control-sm border-0" name="time" id="time">
                </div>
                <div class="col">
                    <label for="room">Room</label>
                    <input type="text" class="form-control form-control-sm border-0" name="room" id="room">
                </div>
            </div>
            <div>
                <label for="rationale">Rationale</label>
                <textarea name="rationale" id="rationale" cols="30" rows="10" class="form-control form-control-sm border-0"></textarea>
            </div>
            <div>
                <label for="objectives">Objectives</label>
                <textarea name="objectives" id="objectives" cols="30" rows="10" class="form-control form-control-sm border-0"></textarea>
            </div>
            <div>
                <label for="guidelines">Guidelines</label>
                <textarea name="guidelines" id="guidelines" cols="30" rows="10" class="form-control form-control-sm border-0"></textarea>
            </div>
            <button class="btn btn-sm btn-primary">Create</button>
        </form>
    </div>

    <div class="col-sm">

        <ul class="list-group gap-1">
            {{#each events}}
                <li class="list-group-item secondary-bg-color d-flex justify-content-between align-items-center">
                    <a href="/event/{{this._id}}" class="text-decoration-none text-white">{{this.title}}</a>
                    <div class="d-flex align-items-center gap-2">
                        <button type="button" class="btn p-0 editEventBtn" data-url="{{this.url}}"><i class="bi bi-pencil-fill text-warning"></i></button>
                        <form action="/event/{{this._id}}?_method=DELETE" class="deleteEventForm" method="post">
                            <button type="submit" class="btn p-0"><i class="bi bi-trash3-fill text-danger"></i></button>
                        </form>
                    </div>
                </li>
            {{/each}}
        </ul>

        <hr class="border border-white border-5 my-5">

        <ul class="list-group gap-1">
        {{#each articles}}
            <li class="list-group-item secondary-bg-color text-white d-flex justify-content-between align-items-center text-capitalize">{{this.title}} <span>{{this.author.firstname}} {{this.author.lastname}}</span></li>
        {{/each}}
        </ul>
        
    </div>

