<h2 class="mb-5">Dashboard - Admin</h2>

{{> addEventModal}}

<div class="mt-5 row gy-5">

    <div class="col">
        <ul class="list-group gap-1" id="eventList">
            {{#each events}}
                <li class="list-group-item secondary-bg-color d-flex justify-content-between align-items-center" data-id="{{this._id}}">
                    <a href="/event/{{this._id}}" class="text-decoration-none text-white">{{this.title}}</a>
                    <div class="d-flex align-items-center gap-2">
                        <button type="button" class="btn p-0 editEventBtn" data-url="/api/event/{{this._id}}"><i class="bi bi-pencil-fill text-warning"></i></button>
                        <button type="button" class="btn p-0 deleteEventBtn" data-url="/api/event/{{this._id}}"><i class="bi bi-trash3-fill text-danger"></i></button>
                    </div>
                </li>
            {{/each}}
        </ul>
    </div>

    <div class="col">

        <ul class="list-group gap-1">
            {{#each articles}}
                <li class="list-group-item secondary-bg-color text-white d-flex justify-content-between align-items-center text-capitalize">{{this.title}} <span>{{this.author.firstname}} {{this.author.lastname}}</span></li>
            {{/each}}
        </ul>
        
    </div>

