<h2 class="mb-5">Dashboard - Student</h2>

<h4>Incoming Events</h4>

<div class="row gap-5">
    {{#each events}}
        <div class="secondary-bg-color p-4 rounded col-lg-5">
            <div class="d-flex justify-content-end">
                {{!-- <span class="badge bg-success">Ongoing Reservation</span> --}}
                {{{reservationStatus this.reservers}}}
            </div>
            <br>
            <div style="height: 6rem;">
                <h4>{{this.title}}</h4>
                <p>{{this.description}}</p>
                <p>{{formatDate this.date}} | {{formatTime this.time}}</p>
            </div>
            <div class="mt-5 d-flex justify-content-between align-items-center">
                <div class="d-flex gap-3">
                    {{{isCurrentUserReserved this.reservers this.userID this._id}}}

                    <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#detail{{this._id}}Modal">
                        Details
                    </button>

                    <div class="modal fade" id="detail{{this._id}}Modal" tabindex="-1" aria-labelledby="detail{{this._id}}ModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-scrollable modal-xl">
                            <div class="modal-content primary-bg-color">
                                <div class="modal-header border-0 p-0 d-flex justify-content-end">
                                    {{!-- <h1 class="modal-title fs-5" id="detail{{this._id}}ModalLabel">Reservers</h1> --}}
                                    <button type="button" class="btn p-0" data-bs-dismiss="modal"><i class="bi bi-x text-white fs-1"></i></button>
                                    {{!-- <p>{{this.reservers.length}} / 60</p> --}}
                                </div>
                                <div class="modal-body">
                                    <h3 class="fw-bolder">{{this.title}}</h3>
                                    <p>Venue: ICCT Cainta Campus (Room {{this.room}})</p>
                                    <p>{{this.description}}</p>
                                    <p>{{this.rationale}}</p>
                                    <br>
                                    <h5 class="fw-bold">Objectives</h5>
                                    <p>{{{formatToList this.objectives}}}</p>
                                    {{!-- <p>{{this.objectives}}</p> --}}
                                    <br>
                                    <h5 class="fw-bold">Guidelines</h5>
                                    <p>{{{formatToList this.guidelines}}}</p>
                                    <hr>
                                    <p class="text-end">Room {{this.reservers.length}} / 60</p>
                                    <ul class="list-group gap-2">
                                        {{{listofReservers this.reservers this.userID this._id}}}
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <span ><i class="bi bi-people-fill"></i> {{this.reservers.length}} / 60</span>
            </div>
        </div>
    {{/each}}
</div>

<hr class="my-5">

<div class="w-auto">
    <h2>Article Post</h2>
    <form action="/articles" class="d-grid gap-3" method="POST">
        <input type="hidden" name="author" value="{{user._id}}">
        <div>
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control form-control-sm border-0" id="title" name="title">
        </div>
        <div>
            <label for="body" class="form-label">Body</label>
            <textarea class="form-control border-0" id="body" cols="30" rows="10" name="body"></textarea>
        </div>
        <button class="btn btn-sm btn-dark">Submit</button>
    </form>
</div>