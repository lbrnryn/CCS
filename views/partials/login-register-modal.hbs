                                <label for="lastname" class="text-white">Lastname</label>
                                <div class="invalid-feedback">Lastname is required</div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-floating mb-3">
                                {{!-- <input type="email" class="form-control border-0" id="email" name="email" placeholder="email" required> --}}
