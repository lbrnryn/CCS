                                <div class="invalid-feedback">Firstname is required</div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-floating mb-3">
                                {{!-- <input type="text" class="form-control border-0" id="lastname" name="lastname" placeholder="lastname" required> --}}
