<button type="button" class="border-0 bg-transparent text-white d-flex align-items-center gap-3" data-bs-toggle="modal" data-bs-target="#loginRegisterModal"><i class="bi bi-box-arrow-in-right fs-2"></i><span class="d-sm-block d-md-block d-lg-none d-xl-none d-xxl-none">Login/Register</span></button>

<div class="modal fade mt-5" id="loginRegisterModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body primary-bg-color rounded">
                {{!-- <form action="/login" id="loginForm" method="POST"> --}}
                <form class="needs-validation" id="loginForm" method="POST" novalidate>
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control border-0" id="loginUsername" name="username" placeholder="username" required>
                        <label for="loginUsername" class="text-white">Username</label>
                        <div class="invalid-feedback">Username is required</div>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="password" class="form-control border-0" id="loginPassword" name="password" placeholder="password" required>
                        <label for="loginPassword" class="text-white">Password</label>
                        <div class="invalid-feedback">Password is required</div>
                    </div>
                    <div class="d-flex justify-content-around">
                        <button type="submit" class="btn btn-sm btn-dark">Login</button>
                        <button type="button" class="btn btn-sm btn-dark" id="showRegisterFormBtn">Sign Up</button>
                    </div>
                </form>

                {{!-- <form action="/register" class="d-none needs-validation" id="registerForm" method="POST" novalidate> --}}
